<h1>Here's the horror</h1>

<div class="col-md-6">
  <h2><%= @creature.name %></h2>
  <p><%= @creature.desc %> </p>
  <h2>Assosiated Tags</h2>
  <% @tags.each do |t| %>
    <li><%= link_to t.name, t %></li>
  <% end %>
  <br>

  <%= link_to "Edit Horror", edit_creature_path, :class => "btn btn-primary" %>
  <%= link_to "Remove Horror", @creature, :method => "delete", :class => "btn btn-primary" %>
</div>
<div class="col-md-6">
  <h2>Related Posts</h2>
  <ul>
  <% @links.each do |l| %>
    <li><a href="<%= l['data']['url'] %>"><%= l['data']['title'] %></a></li>
  <% end %>
  </ul>
</div>