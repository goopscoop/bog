<h1>Tag</h1>

<h2><%= @tag.name %></h2>
<br>
<h2>Assosiated Creatures</h2>
<% @creatures.each do |c| %>
  <li><p><%= link_to c.name, c %></p>
  <p><%= c.desc %></p>
  </li>
<% end %>

<%= link_to "Edit Tag", edit_tag_path, :class => "btn btn-primary" %>
<% if @creatures.length == 0 %><%= link_to "Remove Tag", @tag, :method => "delete", :class => "btn btn-primary"  %><% end %>
<% if @creatures.length > 0 %><button class="btn btn-primary" disabled>Cannot Delete</button><% end %>